<Window x:Class="Ex._08___wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex._08___wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="457" Width="800">
    <Grid Margin="0,0,0,-21">
        <GroupBox Header="A vencer" HorizontalAlignment="Left" Height="115" VerticalAlignment="Top" Width="389" Margin="26,10,0,0">
